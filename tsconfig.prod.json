{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "paths": {
      "tslib" : ["./node_modules/nx/node_modules/tslib/tslib.d.ts"]
    }
  }
}
