{
  "name": "integration-tests",
  "scripts": {
    "test": "jest",
    "test:secret-key": "RUN_WITH_SECRET_KEY=true jest --runInBand",
    "test:atlasnet": "ATLASNET=true jest",
    "test:atlasnet-secret-key": "RUN_ATLASNET_WITH_SECRET_KEY=true jest --runInBand",
    "test:weeklynet": "WEEKLYNET=true jest",
    "test:weeklynet-secret-key": "RUN_WEEKLYNET_WITH_SECRET_KEY=true jest --runInBand",
    "test:basenet": "BASENET=true jest",
    "test:basenet-secret-key": "RUN_GHOSTNET_WITH_SECRET_KEY=true jest --runInBand",
    "originate-known-contracts": "node -r ts-node/register originate-known-contracts.ts",
    "originate-known-contracts-and-run-test": "node -r ts-node/register originate-known-contracts.ts && jest"
  },
  "version": "19.1.0",
  "dependencies": {
    "@ledgerhq/devices": "8.0.7",
    "@ledgerhq/hw-transport": "6.28.8",
    "@ledgerhq/hw-transport-node-hid": "6.27.21",
    "@ledgerhq/hw-transport-node-hid-noevents": "6.27.19",
    "@mavrykdynamics/taquito": "^19.1.0",
    "@mavrykdynamics/taquito-contracts-library": "^19.1.0",
    "@mavrykdynamics/taquito-core": "^19.1.0",
    "@mavrykdynamics/taquito-http-utils": "^19.1.0",
    "@mavrykdynamics/taquito-local-forging": "^19.1.0",
    "@mavrykdynamics/taquito-michel-codec": "^19.1.0",
    "@mavrykdynamics/taquito-michelson-encoder": "^19.1.0",
    "@mavrykdynamics/taquito-remote-signer": "^19.1.0",
    "@mavrykdynamics/taquito-rpc": "^19.1.0",
    "@mavrykdynamics/taquito-sapling": "^19.1.0",
    "@mavrykdynamics/taquito-signer": "^19.1.0",
    "@mavrykdynamics/taquito-tzip12": "^19.1.0",
    "@mavrykdynamics/taquito-tzip16": "^19.1.0",
    "@mavrykdynamics/taquito-utils": "^19.1.0",
    "bignumber.js": "^9.1.2",
    "bip39": "3.1.0",
    "blakejs": "^1.2.1"
  },
  "private": true,
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testPathIgnorePatterns": [
      "./ledger-signer.spec.ts",
      "./ledger-signer-failing-tests.spec.ts"
    ],
    "reporters": [
      "default",
      "jest-stare"
    ],
    "testResultsProcessor": "../node_modules/jest-stare"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "jest-retries": "^1.0.1",
    "jest-stare": "2.5.1",
    "lint-staged": "^14.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
